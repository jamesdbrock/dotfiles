{
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": [";"],
      "after": [":"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": "#505050",
  "vim.statusBarColors.insert": "#505050",
  "vim.statusBarColors.visual": "#505050",
  "vim.statusBarColors.visualline": "#505050",
  "vim.statusBarColors.visualblock": "#505050",
  "vim.statusBarColors.replace": "#505050",

  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "[haskell]": {},
  "languageServerHaskell.trace.server": "verbose",
  "workbench.colorCustomizations": {
    "statusBar.background": "#505050",
    "statusBar.noFolderBackground": "#505050",
    "statusBar.debuggingBackground": "#505050"
  },
  "editor.tabSize": 2,
  "editor.rulers": [80,100,120],
  "files.trimTrailingWhitespace": true,
  "window.zoomLevel": 0,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorSurroundingLines": 3,
  "files.watcherExclude": {
    "**/.psc-package/**": true,
    "**/.spago/**": true,
    "**/output/**": true
  }
}
